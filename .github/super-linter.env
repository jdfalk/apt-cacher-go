# file: .github/super-linter.env
# version: 1.0.0
# guid: e1f2a3b4-c5d6-789a-bcde-f123456789020

# Super Linter Configuration for apt-cacher-go
# This file contains environment variables for Super Linter

# General Settings
VALIDATE_ALL_CODEBASE=false
DEFAULT_BRANCH=main
LOG_LEVEL=NOTICE
OUTPUT_FORMAT=colored
OUTPUT_FOLDER=super-linter-output
OUTPUT_DETAILS=detailed
SUPPRESS_POSSUM=true

# Language-specific validations for Go project
VALIDATE_GO=true
VALIDATE_GO_LINT=true
VALIDATE_BASH=true
VALIDATE_SHELL_SHFMT=true
VALIDATE_MARKDOWN=true
VALIDATE_YAML=true
VALIDATE_JSON=true
VALIDATE_DOCKERFILE_HADOLINT=true
VALIDATE_GITHUB_ACTIONS=true

# Disable irrelevant validations
VALIDATE_PYTHON_BLACK=false
VALIDATE_PYTHON_FLAKE8=false
VALIDATE_PYTHON_PYLINT=false
VALIDATE_JAVASCRIPT_ES=false
VALIDATE_TYPESCRIPT_ES=false
VALIDATE_CSS=false
VALIDATE_HTML=false
VALIDATE_NATURAL_LANGUAGE=false
VALIDATE_JSCPD=false

# Filter settings
FILTER_REGEX_EXCLUDE=.*\.git/.*|.*\.github/copilot/.*|.*\.vscode/.*|.*vendor/.*|.*\.cache/.*|.*dist/.*|.*build/.*

# Output settings for better debugging
CREATE_LOG_FILE=true
LOG_FILE=super-linter.log

# Security scanning
VALIDATE_GITLEAKS=true
VALIDATE_SECRETS=true

# Go-specific settings
GO_LINT_CONFIG_FILE=.golangci.yml
